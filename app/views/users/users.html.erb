<form action="/users/edit_multiple">

 <style>
   .toolbar {
    position: fixed; /* Фиксированное положение */
    width: 100%;
    height: 60px;
    left: 0;
    align: center;
    /* Расстояние от правого края окна браузера */
    padding: 10px; /* Поля вокруг текста */ 
    background: #ffff; /* Цвет фона */ 
    border: 1px solid #333; /* Параметры рамки */ 
   }
   li{
text-decoration: none;
list-style:none;}
 }

  </style>



<div class="toolbar">
      <b-btn><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class:"btn btn-outline-dark" %> </b-btn>
      <b-btn><%= submit_tag "Lock", class: "btn btn-outline-secondary" %> </b-btn>
      <b-btn><%= submit_tag "Unlock", class: "btn btn-outline-secondary" %> </b-btn>
      <b-btn><%= submit_tag "Delete", class: "btn btn-outline-secondary" %> </b-btn>
      Current user email: <%= current_user.email%>
</div>
<br>
<br>
<br>

<h1>All Users</h1>


<table class="table table-striped table-bordered table-list">
  <thead>
    <tr>
      <th scope="col"> <%= check_box_tag 'check_all', 'check_all', false, :onClick => "checkAll(this);" %> </th>
      <th scope="col">Email</th>
      <th scope="col">Create date</th>
      <th scope="col">Last activity</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
     <% User.all.each do |user| %> 
    <tr>
      <th scope="row"><%= check_box_tag "users_ids[]", user.id %></th>
      <td><li><%= user.email %></li></td>
      <td><li><%= user.current_sign_in_at %></li></td>
      <td><li><%= user.created_at %></li></td>
      <td><li><%= user.locked ? "Locked":"Unlocked" %></li></td>
      
    </tr>
<% end %>
  </tbody>
</table>
</form>
